<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.simplesocial.viewmodel.ProfileViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtProfile"
        android:textSize="24sp"
        android:text="@={viewModel.loggedUser.username}"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtFName"
        android:textSize="24sp"
        android:text="@={viewModel.loggedUser.FName}"
        app:layout_constraintTop_toBottomOf="@id/txtProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtLName"
        android:textSize="24sp"
        android:text="@={viewModel.loggedUser.LName}"
        app:layout_constraintTop_toBottomOf="@id/txtFName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSettings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:background="@drawable/style_circular_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>